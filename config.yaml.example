# IDM Heat Pump Logger - Configuration Example
# This file is for reference only. The actual configuration is stored in SQLite.
# For Docker deployments, use environment variables (see docker-compose.yml).

idm:
  # IP address or hostname of your IDM heat pump
  host: "192.168.178.103"
  # Modbus TCP port (usually 502)
  port: 502
  # Heating circuits to monitor (A, B, C, D, E, F, G)
  circuits: ["A"]

influx:
  # InfluxDB version (1 or 2)
  version: 2
  # InfluxDB v2 settings (Docker defaults)
  url: "http://idm-influxdb:8086"
  org: "my-org"
  bucket: "idm"
  token: "my-super-secret-token-change-me"
  # InfluxDB v1 settings (if version: 1)
  username: ""
  password: ""
  database: "idm"

web:
  # Enable web interface
  enabled: true
  # Listen address (0.0.0.0 = all interfaces)
  host: "0.0.0.0"
  # Web server port
  port: 5000
  # Enable write capabilities (control, scheduling)
  write_enabled: false

logging:
  # Sensor polling interval in seconds
  interval: 60
  # Log level (DEBUG, INFO, WARNING, ERROR)
  level: "INFO"

mqtt:
  # Enable MQTT publishing
  enabled: false
  # MQTT broker address
  broker: ""
  # MQTT broker port (default: 1883 for non-TLS, 8883 for TLS)
  port: 1883
  # MQTT authentication (optional)
  username: ""
  password: ""
  # Enable TLS encryption
  use_tls: false
  # Topic prefix for all published messages
  topic_prefix: "idm/heatpump"
  # Publish interval in seconds (uses logging interval if not set)
  publish_interval: 60
  # Quality of Service (0, 1, or 2)
  qos: 1
