# IDM Heat Pump Logger - Configuration Example
# This file is for reference only. The actual configuration is stored in SQLite.
# For Docker deployments, use environment variables (see docker-compose.yml).

idm:
  # IP address or hostname of your IDM heat pump
  host: "192.168.178.103"
  # Modbus TCP port (usually 502)
  port: 502
  # Heating circuits to monitor (A, B, C, D, E, F, G)
  circuits: ["A"]

metrics:
  # VictoriaMetrics write URL
  url: "http://victoriametrics:8428/write"

web:
  # Enable web interface
  enabled: true
  # Listen address (0.0.0.0 = all interfaces)
  host: "0.0.0.0"
  # Web server port
  port: 5000
  # Enable write capabilities (control, scheduling)
  write_enabled: false

logging:
  # Sensor polling interval in seconds
  interval: 60
  # Log level (DEBUG, INFO, WARNING, ERROR)
  level: "INFO"

mqtt:
  # Enable MQTT publishing
  enabled: false
  # MQTT broker address
  broker: ""
  # MQTT broker port (default: 1883 for non-TLS, 8883 for TLS)
  port: 1883
  # MQTT authentication (optional)
  username: ""
  password: ""
  # Enable TLS encryption
  use_tls: false
  # Topic prefix for all published messages
  topic_prefix: "idm/heatpump"
  # Publish interval in seconds (uses logging interval if not set)
  publish_interval: 60
  # Quality of Service (0, 1, or 2)
  qos: 1

signal:
  # Enable Signal notifications (requires signal-cli)
  enabled: false
  # CLI path (inside container or host)
  cli_path: "signal-cli"
  # Sender phone number (Signal registered)
  sender: ""
  # List of recipients (phone numbers)
  recipients: []

updates:
  # Enable automatic update checks and apply updates
  enabled: false
  # Check interval in hours (1-168)
  interval_hours: 12
  # Mode: check (only notify) or apply (auto update)
  mode: "apply"
  # Update target: all, major, minor, patch
  target: "all"
